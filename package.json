{
  "name": "sui-raffle-telegram-bot",
  "version": "1.0.0",
  "description": "Whitelabeled Telegram bot for SUI token purchase raffles",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "npx prisma db push --accept-data-loss --skip-generate && node dist/index.js",
    "postinstall": "prisma generate",
    "railway:deploy": "prisma db push && npm run build && npm run start",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "telegram",
    "bot",
    "sui",
    "raffle",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mysten/sui.js": "^0.50.0",
    "@prisma/client": "^6.19.0",
    "bullmq": "^5.29.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "ioredis": "^5.4.1",
    "node-telegram-bot-api": "^0.66.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/node-telegram-bot-api": "^0.64.7",
    "prisma": "^6.19.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
